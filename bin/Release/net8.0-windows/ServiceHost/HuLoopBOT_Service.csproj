<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- Important: prevents reference-DLL expectation -->
    <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.DirectoryServices.AccountManagement" Version="10.0.2" />
    <PackageReference Include="System.ServiceProcess.ServiceController" Version="9.0.0" />
    <PackageReference Include="System.Threading.AccessControl" Version="8.0.0" />
  </ItemGroup>

  <!-- Shared source code from main project -->
  <ItemGroup>
    <Compile Include="..\Services\**\*.cs" LinkBase="Services" />
    <Compile Include="..\Utilities\**\*.cs" LinkBase="Utilities" />
    <Compile Include="..\Models\**\*.cs" LinkBase="Models" />
  </ItemGroup>

  <!-- Exclude UI files -->
  <ItemGroup>
    <Compile Remove="..\Program.cs" />
    <Compile Remove="..\MainForm*.cs" />
    <Compile Remove="..\HiddenMonitorForm.cs" />
    <Compile Remove="..\*Form.cs" />
  </ItemGroup>

</Project>
