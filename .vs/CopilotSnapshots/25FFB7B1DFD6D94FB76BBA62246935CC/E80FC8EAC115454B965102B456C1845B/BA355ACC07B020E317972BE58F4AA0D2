namespace HuLoopBOT;

partial class MainForm
{
    private System.ComponentModel.IContainer components = null;
    private Label lblAdminStatus;
    private Button btnDisableSleep;
    private Button btnDisableLock;
    private Button btnPreventRdpTimeout;
    private Button btnTransferSession;
    private Button btnRestartAsAdmin;
    private Label lblInfo;

    protected override void Dispose(bool disposing)
    {
        if (disposing && (components != null))
            components.Dispose();
        base.Dispose(disposing);
    }

    private void InitializeComponent()
    {
        lblAdminStatus = new Label();
        btnDisableSleep = new Button();
        btnDisableLock = new Button();
        btnPreventRdpTimeout = new Button();
        btnTransferSession = new Button();
        btnRestartAsAdmin = new Button();
        lblInfo = new Label();

        // lblAdminStatus
        lblAdminStatus.Location = new Point(20, 20);
        lblAdminStatus.Size = new Size(360, 30);
        lblAdminStatus.Font = new Font("Segoe UI", 10F, FontStyle.Bold);
        lblAdminStatus.AutoSize = false;
        lblAdminStatus.TextAlign = ContentAlignment.MiddleLeft;

        // lblInfo
        lblInfo.Location = new Point(20, 55);
        lblInfo.Size = new Size(360, 40);
        lblInfo.Font = new Font("Segoe UI", 8.5F);
        lblInfo.ForeColor = Color.Gray;
        lblInfo.Text = "Administrator privileges are required to modify system settings.";
        lblInfo.AutoSize = false;

        // btnRestartAsAdmin
        btnRestartAsAdmin.Text = "\uD83D\uDD12 Restart as Administrator"; // 🔒 using surrogate pair
        btnRestartAsAdmin.Location = new Point(20, 105);
        btnRestartAsAdmin.Size = new Size(200, 35);
        btnRestartAsAdmin.Font = new Font("Segoe UI", 9F, FontStyle.Bold);
        btnRestartAsAdmin.BackColor = Color.FromArgb(0, 120, 215);
        btnRestartAsAdmin.ForeColor = Color.White;
        btnRestartAsAdmin.FlatStyle = FlatStyle.Flat;
        btnRestartAsAdmin.FlatAppearance.BorderSize = 0;
        btnRestartAsAdmin.Cursor = Cursors.Hand;
        btnRestartAsAdmin.Click += btnRestartAsAdmin_Click;

        // btnDisableSleep
        btnDisableSleep.Text = "Disable Sleep";
        btnDisableSleep.Location = new Point(20, 155);
        btnDisableSleep.Size = new Size(360, 35);
        btnDisableSleep.Font = new Font("Segoe UI", 9F);
        btnDisableSleep.Click += btnDisableSleep_Click;

        // btnDisableLock
        btnDisableLock.Text = "Disable Lock Screen";
        btnDisableLock.Location = new Point(20, 200);
        btnDisableLock.Size = new Size(360, 35);
        btnDisableLock.Font = new Font("Segoe UI", 9F);
        btnDisableLock.Click += btnDisableLock_Click;

        // btnPreventRdpTimeout
        btnPreventRdpTimeout.Text = "Prevent RDP Timeout";
        btnPreventRdpTimeout.Location = new Point(20, 245);
        btnPreventRdpTimeout.Size = new Size(360, 35);
        btnPreventRdpTimeout.Font = new Font("Segoe UI", 9F);
        btnPreventRdpTimeout.Click += btnPreventRdpTimeout_Click;

        // btnTransferSession
        btnTransferSession.Text = "Transfer Session";
        btnTransferSession.Location = new Point(20, 290);
        btnTransferSession.Size = new Size(360, 35);
        btnTransferSession.Font = new Font("Segoe UI", 9F);
        btnTransferSession.Click += btnTransferSession_Click;

        // MainForm
        Controls.Add(lblAdminStatus);
        Controls.Add(lblInfo);
        Controls.Add(btnRestartAsAdmin);
        Controls.Add(btnDisableSleep);
        Controls.Add(btnDisableLock);
        Controls.Add(btnPreventRdpTimeout);
        Controls.Add(btnTransferSession);

        Text = "HuLoop BOT";
        ClientSize = new Size(400, 350);
        FormBorderStyle = FormBorderStyle.FixedSingle;
        MaximizeBox = false;
        StartPosition = FormStartPosition.CenterScreen;
        Font = new Font("Segoe UI", 9F);
    }

    private void btnRestartAsAdmin_Click(object sender, EventArgs e)
    {
        RestartAsAdmin();
    }
}
